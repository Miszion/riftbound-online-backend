{
  "name": "riftbound-online-backend",
  "version": "1.0.0",
  "description": "Riftbound Online Game Backend Server",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "generate:cards": "ts-node scripts/data/transformChampionDump.ts",
    "scrape:piltover": "ts-node scripts/data/scrapePiltover.ts",
    "apply:piltover-costs": "ts-node scripts/data/applyPiltoverCosts.ts",
    "generate:taxonomy": "ts-node scripts/data/buildEffectIndex.ts",
    "analyze:tokens": "node scripts/data/run-token-creators.js",
    "upload:cards": "ts-node scripts/data/uploadCardCatalog.ts",
    "sync:cards": "npm run generate:cards && npm run scrape:piltover && npm run apply:piltover-costs && npm run generate:taxonomy && npm run upload:cards",
    "docker:publish": "bash scripts/deploy/publish-ecr.sh",
    "deploy:stacks": "bash scripts/deploy/deploy-stacks.sh"
  },
  "keywords": [
    "game",
    "server",
    "aws",
    "riftbound"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "aws-sdk": "^2.1400.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "graphql": "^16.8.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.14.0",
    "helmet": "^7.0.0",
    "playwright": "^1.57.0",
    "uuid": "^9.0.0",
    "winston": "^3.8.2",
    "ws": "^8.15.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@types/uuid": "^9.0.2",
    "@types/ws": "^8.5.10",
    "eslint": "^8.40.0",
    "jest": "^29.5.0",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
